{
    "name": "ngdo-pro/gilded-rose-kata",
    "description": "A php kata starter with docker for the Gilded Rose kata",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Nicolas Gomes de Oliveira"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "approvals/approval-tests": "dev-Main",
        "infection/infection": "^0.27.0"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
